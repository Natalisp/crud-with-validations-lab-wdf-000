<%= form_for (@song) do |f| %>

<% if @song.errors.any? %>
<div id="error_explanation">
<h3>Errors:</h3>
<ul>
<% @song.errors.full_messages.each do |error| %>
  <li> <%= error %> </li>
</ul>
</div>
<% end %>
<% end %>

<div class="field">
<label>Song title: </label>
<%= f.text_field :title %><br>
</div>

<div class="field">
<label>Released?</label>
<%= f.check_box :released, {}, "true", "false" %>
</div>

<div class="field">
<label>Song release date:</label>
<%= f.text_field :release_year%>
</div>

<div class="field">
<label>Artist name:</label>
<%= f.text_field :artist_name%>
</div>

<div class="field">
<label>Song genre</label>
<%= f.text_field :genre%>
</div>

<%= f.submit %>

<% end %>